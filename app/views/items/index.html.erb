
<div class="banner">
  <div class="banner-text">
    <h1> Terra </h1>
    <h4> Essence of nature for your home</h4>
  </div>
</div>

<h5 class="row collection-header">Explore Our Collection of Nature-Themed Ceramic Decor</h5>
<div class="row collection">
  <% counter = 0 %>
    <% @items.each do |item| %>
    <% if item.stock %>
    <div class="item-box col s12 m4" id=<%= "item#{item.id}" %>>
        <div class="">
          <%= image_tag item.web_image, class: "responsive-img activator card-img" %>
        </div>
        <div class="item-content">
            <h5 class="item-name-index"><%= item.name %></h5>
            <p>  <%= link_to 'View Item', item %> </p>
          <div class="price-count">
            <p class=""> <%= number_to_currency item.price %> each <span class="inline grey-text right instock"><%=item.stock %> available</span></p>
          </div>
            <div>
                <%= form_for OrderItem.new, url: order_items_path do |f| %>
                <%= f.hidden_field :item, :value => item.id %>
                <div class = "purchase-container">
                 <%#= f.number_field :quantity, min: 1, placeholder:'amount', class:'purchase-amount'%>
                 <%= f.submit  'Add to Cart',class: 'btn item-show-btn'%>
               </div>
                <% end %>
            </div>
        </div>
        <!-- <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= item.name %><i class="material-icons right">close</i></span>
            <%#= link_to 'View Item', item %>
            <p><%= item.description %></p>
        </div> -->
    </div>

  <% end %>
  <% end %>
</div>
